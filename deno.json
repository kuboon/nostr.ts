{
    "name": "@kuboon/nostr-sdk",
    "version": "0.2.0",
    "exports": {
        ".": "./nostr.ts",
        "./key": "./key.ts",
        "./v2": "./v2.ts"
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 110,
        "exclude": ["cov_profile"]
    },
    "compilerOptions": {
        "verbatimModuleSyntax": true,
        "useUnknownInCatchVariables": true
    },
    "lint": {
        "rules": {
            "exclude": [
                "prefer-const",
                "no-slow-types",
                "require-await",
                "verbatim-module-syntax",
                "ban-types"
            ]
        },
        "exclude": ["scure.ts", "**/*.test.ts"]
    },
    "test": {
        "exclude": ["relay-pool.test.ts", "relay-single.test.ts", "websocket.test.ts"]
    },
    "imports": {
        "@blowater/collections": "jsr:@blowater/collections@^0.0.0-rc3",
        "@blowater/csp": "jsr:@blowater/csp@1.0.0",
        "@noble/ciphers": "npm:@noble/ciphers@2.0.1",
        "@noble/curves": "npm:@noble/curves@2.0.1",
        "@noble/hashes": "npm:@noble/hashes@2.0.1",
        "@noble/secp256k1": "jsr:@noble/secp256k1@3.0.0",
        "@scure/bip32": "npm:@scure/bip32@2.0.1",
        "@scure/bip39": "npm:@scure/bip39@2.0.1",
        "@std/assert": "jsr:@std/assert@1.0.16",
        "@std/datetime": "jsr:@std/datetime@0.225.5",
        "@std/encoding": "jsr:@std/encoding@1.0.10",
        "zod": "npm:zod@4.1.13"
    }
}
